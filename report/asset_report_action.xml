<odoo>
    <record id="action_export_assets_xlsx" model="ir.actions.server">
        <field name="name">Assets Report</field>
        <field name="model_id" ref="account_asset.model_account_asset"/>
        <field name="binding_model_id" ref="account_asset.model_account_asset"/>

        <field name="state">code</field>
        <field name="code"><![CDATA[
records[0].write({'dummy': env['account.asset'].export_assets_xlsx(records.ids)})
action = {
    'type': 'ir.actions.act_url',
    'url': '/web/content/?model=account.asset&id=%s&field=dummy&filename=assets_report.xlsx&download=true' % records[0].id,
    'target': 'self',
}
]]></field>
    </record>

</odoo>
